{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "plugin:node/recommended",
    "plugin:import/errors",
    "plugin:import/typescript",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "tsconfigRootDir": "./",
    "sourceType": "module",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  },
  "settings": {
    "import/extensions": [".js", ".jsx", ".ts", ".tsx"],
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx"]
    },
    "import/resolver": {
      "node": {
        "resolvePaths": ["node_modules/@types"],
        "tryExtensions": [".js", ".json", ".ts", ".d.ts"],
        "extensions": [".js", ".jsx", ".ts"]
      },
      "typescript": {}
    }
  },
  "rules": {
    "no-var": "warn",
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "spaced-comment": "error",
    "no-magic-numbers": ["off"],
    "eqeqeq": "error",
    "no-process-exit": "off", // deprecated in ESLint v7.0.0
    "node/no-missing-import": "off", // eslint-plugin-import check this + eslint-import-resolver-ts
    "node/no-unsupported-features/es-syntax": ["error", { "ignores": ["modules"] }],
    "node/no-unpublished-import": [
      "warn",
      {
        "allowModules": ["morgan", "cors", "pino", "pino-pretty"]
      }
    ],
    // --- Personal ---
    "@typescript-eslint/promise-function-async": ["error"],
    "@typescript-eslint/sort-type-union-intersection-members": ["error"],
    "@typescript-eslint/explicit-function-return-type": ["warn", { "allowExpressions": true }],
    "@typescript-eslint/explicit-module-boundary-types": ["warn"],
    "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }],
    "@typescript-eslint/no-magic-numbers": ["warn", { "ignore": [200, 4000], "ignoreEnums": true }],
    "@typescript-eslint/no-unnecessary-condition": ["error", { "allowConstantLoopConditions": true }],
    "@typescript-eslint/consistent-type-assertions": ["error", { "assertionStyle": "never" }],
    "@typescript-eslint/no-misused-promises": ["off"],
    "@typescript-eslint/naming-convention": [
      "warn",
      {
        "selector": ["variable", "function", "parameter"],
        "format": ["camelCase"],
        "leadingUnderscore": "allow"
      },
      { "selector": "typeAlias", "format": ["PascalCase"] },
      { "selector": "enum", "format": ["PascalCase"] },
      { "selector": "enumMember", "format": ["UPPER_CASE"] }
    ],
    // --- Personal ---
    "prettier/prettier": ["warn", {}, { "usePrettierrc": true }]
  }
}
